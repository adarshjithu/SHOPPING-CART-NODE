<section>
    <div class="container">
        <form action="" id="checkout-form">
            <div class="row">
                <div class="col-md-6">
<h2 class="text-center">Enter Delivery Details</h2>
         
               
<label for=""> Adress</label>
                    <input type="text " id="address" name="address" class="form-control">
<label for=""> Pincode </label>
                    <input type="text " id="pincode" name="pincode" class="form-control">

<label for=""> Mobile</label>
                    <input type="text " id="mobile" name="mobile" class="form-control">
                    <input type="text" name="userId" value="{{user.user}} " hidden>




                </div>
                <div class="col-md-4 mt-5 ml-5" style="border-style: solid ;border-width: 2px;">
                    <h5 class="mt-4">Total Amount:Rs.{{total}}</h5>
                    <hr>
                    <p>Payment Method</p>
                   <label for="" class="radio-inline"><input type="radio"  name="payment-method" value="COD" > 
                   COD</label><br>
                   <label for="" class="radio-inline"><input type="radio" name="payment-method" value="online">
                   Online Payment</label><br>
                   <button class="btn btn-primary float-right" type="submit">Checkout</button>
                </div>
            </div>
        </form>
    </div>
   

</section>

<script>
   $('#checkout-form').submit((e)=>{
    e.preventDefault()
    $.ajax({
        url:'/place-order',
        method:'post',
        data:$('#checkout-form').serialize(),
        success:(response)=>{
          alert(response)
        if(response.status){
         location.href='/order-success'
        }
        }
    })
   })

</script>